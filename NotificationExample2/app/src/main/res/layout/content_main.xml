<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yamamotoai.notificationexample2.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Notification"
        android:onClick="startNotification"/>

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Notification"
        android:onClick="stopNotification"/>

    <Button
        android:id="@+id/alerm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alerm"
        android:onClick="setAlarm"/>
</LinearLayout>
